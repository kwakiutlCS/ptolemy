
$('#thermo3_data_collection').html("<%= escape_javascript(render(:partial => 'thermal_capacities_temp/tbody')) %>");

$("#thermo3_temperature_field").on("keyup", function() {
	 if ($(this).val() == "") {
	     $("#thermo3_delta_calculator").text("0.0");
	     $("#thermo3_delta_field").val("");
	 }
	 else {
	     var t = parseFloat($(this).val());
	     if (t != NaN) {
		  $("#thermo3_delta_calculator").text((t-15.0).toFixed(1));
		  $("#thermo3_delta_field").val(t-15);
	     }
	 }
    });

if (<%= @data.count > 0 %>) {
$("#thermo3_data_collection_explanation").html("<p><%= I18n.translate("thermo3.data5") %></p>");

$("#thermo3_data-gathering_next").show();
}
else {
     $("#thermo3_data_collection_explanation").html("<p><%= t("thermo3.data1") %> </p>");
     $("#thermo3_data_collection_explanation").append("<p><%= t("thermo3.data2") %> </p>");
     $("#thermo3_data_collection_explanation").append("<p><%= t("thermo3.data3") %> </p>");
     $("#thermo3_data_collection_explanation").append("<p><%= t("thermo3.data4") %> </p>");

     $("#thermo3_data-gathering_next").hide();
}
$(".form_input").val("");
$("#thermo3_delta_calculator").text("0.0");


